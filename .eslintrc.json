{
  "root": true,
  "plugins": [
    "tailwindcss"
  ],
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "next/babel",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
  },
  "settings": {
    "tailwindcss": {
       "groupByResponsive": true,
       "whitelist": []
     }
   },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js"
      ]
    }
  ]
}